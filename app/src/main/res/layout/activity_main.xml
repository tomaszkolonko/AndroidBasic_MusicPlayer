<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_small"
    android:label="@string/activity_main_label"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:scaleType="centerCrop">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp" />

    <GridView
        android:id="@+id/categoryGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:columnWidth="50dp"
        android:numColumns="3"
        android:paddingTop="100dp"
        android:stretchMode="columnWidth"
        tools:context=".MainActivity" />

    <TextView
        android:id="@+id/randomGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/categoryGridView"
        android:layout_marginTop="30dp"
        android:background="#fcd303"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:tag="random"
        android:text="Random"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="@dimen/text_medium" />
</LinearLayout>
